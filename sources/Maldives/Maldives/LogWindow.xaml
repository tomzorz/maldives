<local:MaldivesWindow x:Class="Maldives.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maldives"
        mc:Ignorable="d" SizeToContent="WidthAndHeight"
        Title="LogWindow" Background="#a0ffffff">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="22" MinWidth="400" MaxWidth="600">
        <TextBlock Text="maldives" FontWeight="Light" FontSize="16" FontFamily="Consolas" />
        <TextBlock Text="Log" FontSize="28" FontWeight="Bold" Margin="0,0,0,22" x:Name="Title" />
        <TextBlock Text="Installation requires approval, see prompt on device." FontSize="18" Margin="0,0,0,12" Visibility="Collapsed" x:Name="Approval" />
        <ItemsControl x:Name="Items" Margin="0,0,0,22" MaxHeight="200">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="11" FontFamily="Consolas" Foreground="#404040" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="Close" HorizontalAlignment="Right" Padding="16,6" Click="ButtonBase_OnClick" />
    </StackPanel>
</local:MaldivesWindow>
